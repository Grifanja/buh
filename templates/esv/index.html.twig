{% extends 'base.html.twig' %}

{% block title %}Zps{% endblock %}

{% block body %}
    {% if esvs %}
        <table id="esv" class="table table-striped table-task">
            <thead>
            <tr>
                <th>sum</th>
                <th>year</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for esv in esvs %}
                <tr>
                    <td>{{ esv.sum }} грн.</td>
                    <td>{{ esv.year }}</td>
                    <td>
                        <a href="/esv/edit/{{ esv.id }}" class="btn btn-light" data-id="{{ esv.id }}">Edit</a>
                        <a href="#" class="btn btn-danger delete-task" data-id="{{ esv.id }}">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>No esvs to display</p>
    {% endif %}
{% endblock %}

{%  block javascripts %}
<script src="/js/main.js"></script>
{% endblock %}

